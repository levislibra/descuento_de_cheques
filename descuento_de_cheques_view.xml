<openerp>
    <data>

      <!-- extends_cheque - Formularios de creacion  -->

        <record id="inherit_cheque_tree" model="ir.ui.view">
            <field name="name">extends cheque tree</field>
            <field name="model">cheques.de.terceros</field>
            <field name="inherit_id" ref="cheques_de_terceros.cheque_tree"/>
            <field name="arch" type="xml">
                <!--<tree string="Cheques" editable="bottom">
                    <field name="name"/>
                    <field name="firmante_id"/>
                    <field name="banco_id"/>
                    <field name="importe"/>
                    <field name="fecha_vencimiento"/> -->
                    <field name="fecha_vencimiento" position="after">
                        <field name="fecha_acreditacion_descuento"/>
                    </field>
                    <!--<field name="dias_descuento"/>
                    <field name="tasa_fija_descuento"/>
                    <field name="monto_fijo_descuento" widget='monetary'/>
                    <field name="tasa_mensual_descuento"/>
                    <field name="monto_mensual_descuento"/>
                    <field name="monto_neto_descuento"/>
                </tree>-->
            </field>
        </record>


        <record id="extends_cheque_form" model="ir.ui.view">
            <field name="name">Extends Cheque Form</field>
            <field name="model">cheques.de.terceros</field>
            <field name="arch" type="xml">
                <form string="Formulario de cheque" editable="bottom">
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="firmante_id"/>
                            <field name="banco_id"/>
                            <field name="name"/>
                            <field name="importe" widget="monetary"/>
                            <field name="fecha_vencimiento"/>
                            <field name="fecha_acreditacion_descuento"/>
                            <field name="tasa_fija_descuento"/>
                            <field name="tasa_mensual_descuento"/>
                            <!--<field name="monto_fijo_descuento"/>-->
                        </group>
                        <group>
                            
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

      <!-- Liquidacions - Formularios de creacion  -->

        <record id="descuento_de_cheques_tree" model="ir.ui.view">
        <field name="name">Descuento de cheques Tree</field>
        <field name="model">descuento.de.cheques</field>
        <field name="arch" type="xml">
            <tree string="Lista de liquidaciones">
                <field name="id"/>
                <field name="fecha_liquidacion"/>
                <field name="cliente_id"/>
                <field name="active"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="descuento_de_cheques_form" model="ir.ui.view">
        <field name="name">Descuento de cheques Form</field>
        <field name="model">descuento.de.cheques</field>
        <field name="arch" type="xml">
            <form string="Formulario de liquidacion" editable="bottom">
                <header>
               		<field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <field name="id"/>
                        <field name="fecha_liquidacion"/>
                        <field name="cliente_id"/>
                        <field name="active"/>  
                    </group>
                    <notebook>
                        <page string="Cheques">
                            <field name="cheques_ids">
                                <tree string="Cheques" editable="bottom">
                                    <field name="name"/>
                                    <field name="firmante_id"/>
                                    <field name="banco_id"/>
                                    <field name="importe"/>
                                    <field name="fecha_vencimiento"/>
                                    <field name="fecha_acreditacion_descuento"/>
                                    <field name="dias_descuento"/>
                                    <field name="tasa_fija_descuento"/>
                                    <field name="monto_fijo_descuento"/>
                                    <field name="tasa_mensual_descuento"/>
                                    <field name="monto_mensual_descuento"/>
                                    <field name="monto_neto_descuento"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_descuento_de_cheques" model="ir.actions.act_window">
        <field name="name">Liqudiaciones</field>
        <field name="res_model">descuento.de.cheques</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="descuento_de_cheques_tree"/>
    </record>


    <!-- Menu Principal del modulo (barra superior) - Liquidacion -->
    <menuitem id="menu_descuento_de_cheques" name="Liquidaciones" />
    
    <!-- SubMenu Liquidaciones Lista -->
    <menuitem id="menu_descuento_de_cheques_lista" name="Liquidaciones" parent="menu_descuento_de_cheques"  sequence="0" />
    <menuitem id="submenu_menu_descuento_de_cheques_action" name="Listar" parent="menu_descuento_de_cheques_lista" action="action_descuento_de_cheques"  sequence="0" />

    </data>
</openerp>
